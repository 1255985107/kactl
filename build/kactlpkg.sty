\long\def\@makecaption#1#2{
   \sbox\@tempboxa{\textbf{#1: #2}}
	\ifdim \wd\@tempboxa >\hsize
     #1: #2\par
   \else
     \global \@minipagefalse
     \hb@xt@\hsize{\box\@tempboxa\hfil}
   \fi
	\vspace{2pt}
	\scriptsize
	\@leftcaption \hfill \@rightcaption
	\vspace{1pt}
}

