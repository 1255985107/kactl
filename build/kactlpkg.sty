\newcommand{\kactlimport}[1]{
	\immediate\write18{python kactlprocessor.py -i "\@kactldir/#1" -o kactl.tmp}
	\immediate\input{kactl.tmp}
}

\newcommand{\kactlrawimport}[1]{
